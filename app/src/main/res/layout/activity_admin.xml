<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminActivity"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Enhanced Logout Button -->
    <ImageButton
        android:id="@+id/buttonLogout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_door"
        android:contentDescription="ButtonProfile"
        app:tint="#FF5252"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Enhanced Welcome Text -->
    <TextView
        android:id="@+id/textUserWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Admin!"
        android:textStyle="bold"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#1A237E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/buttonLogout" />

    <!-- Enhanced Menu Cards -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_kelola_harga_buah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/KelolaHargaBuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/icon_harga_buah"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:src="@drawable/ic_fruit"
                android:background="@drawable/circle_background_orange"
                android:contentDescription="Kelola Harga Buah" />

            <TextView
                android:id="@+id/title_harga_buah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Kelola Harga Buah"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1A237E" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#757575" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_kelola_pasar_buah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/card_kelola_harga_buah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/KelolaPasar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/icon_pasar_buah"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:src="@drawable/ic_market"
                android:background="@drawable/circle_background_blue"
                android:contentDescription="Kelola Pasar Buah" />

            <TextView
                android:id="@+id/title_pasar_buah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Kelola Pasar Buah"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1A237E" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#757575" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_kelola_berita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/card_kelola_pasar_buah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/KelolaBerita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/icon_berita"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:src="@drawable/ic_news"
                android:background="@drawable/circle_background_green"
                android:contentDescription="Kelola Berita" />

            <TextView
                android:id="@+id/title_berita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Kelola Berita"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1A237E" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#757575" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>